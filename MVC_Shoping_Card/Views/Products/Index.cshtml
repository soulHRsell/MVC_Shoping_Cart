@model List<ProductsViewModel>

@{
    ViewData["title"] = "Products";
}

<h1>@ViewData["title"]</h1>

<table class="table">
    <thead>
        <th>Category</th>
        <th>Name</th>
        <th>Amount</th>
        <th>Info</th>
    </thead>
    <tbody>
        @foreach(var product in Model)
        {
            <tr>
                <td>@product.Category</td>
                <td>@product.Name</td>
                <td>@product.Amount</td>
                <td>@product.Info</td>
            </tr>
        }
    </tbody>
</table>