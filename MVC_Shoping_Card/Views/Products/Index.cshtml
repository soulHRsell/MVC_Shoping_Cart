@model IPagedList<ProductViewModel>

@{
    ViewData["title"] = "Products";
}

<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="mb-4">@ViewData["title"]</h2>


            <form method="get" asp-action="Index" class="mb-4">
                <div class="card shadow-sm border-0">
                    <div class="card-body">
                        <div class="row g-3 align-items-end">

                            <!-- Product name -->
                            <div class="col-md-3">
                                <label class="form-label fw-semibold">Name</label>
                                <input type="text" name="name" value="@ViewBag.Name"
                                       class="form-control" placeholder="Search by name..." />
                            </div>

                            <!-- Category -->
                            <div class="col-md-3">
                                <label class="form-label fw-semibold">Category</label>
                                <select name="categoryId" class="form-select">
                                    <option value="">All Categories</option>
                                    @foreach (var cat in ViewBag.Categories)
                                    {
                                        var isSelected = ViewBag.CategoryId != null && (int)ViewBag.CategoryId == cat.Id;
                                        <option value="@cat.Id" selected="@(isSelected ? "selected" : null)">
                                            @cat.Name
                                        </option>
                                    }
                                </select>
                            </div>

                            <!-- Price Range -->
                            <div class="col-md-2">
                                <label class="form-label fw-semibold">Min Price</label>
                                <input type="number" step="0.01" name="minPrice" value="@ViewBag.MinPrice"
                                       class="form-control" placeholder="0.00" />
                            </div>

                            <div class="col-md-2">
                                <label class="form-label fw-semibold">Max Price</label>
                                <input type="number" step="0.01" name="maxPrice" value="@ViewBag.MaxPrice"
                                       class="form-control" placeholder="0.00" />
                            </div>

                            <!-- Buttons -->
                            <div class="col-md-2 d-flex gap-2">
                                <button type="submit" class="btn btn-primary flex-fill">
                                    <i class="bi bi-search"></i> Filter
                                </button>
                                <a asp-action="Index" class="btn btn-outline-secondary flex-fill">
                                    <i class="bi bi-x-circle"></i> Reset
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </form>


            @if(User.IsInRole("Admin"))
            {
                <a asp-action="Create" class="btn btn-outline-primary">Create Product</a>
            }
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">Category</th>
                        <th scope="col">Name</th>
                        <th scope="col">Price</th>
                        <th scope="col">Amount</th>
                        <th scope="col">Info</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var product in Model)
                    {
                        <tr>
                            
                            <td scope="row">@product.Category</td>
                            <td scope="row">@product.Name</td>
                            <td scope="row">@product.Price</td>
                            <td scope="row">@product.Amount</td>
                            <td scope="row">@product.Info</td>
                            <td>
                                <a asp-action="Product" asp-route-id=@product.Id>See More...</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            @Html.PagedListPager(
            Model,
            page => Url.Action("Index", new { 
                                                page,  name = ViewBag.Name,
                                                categoryId = ViewBag.CategoryId,
                                                minPrice = ViewBag.MinPrice,
                                                maxPrice = ViewBag.MaxPrice}),
                        new PagedListRenderOptions
                        {
                            LinkToFirstPageFormat = "<i class='bi bi-chevron-double-left'></i>",
                            LinkToPreviousPageFormat = "<i class='bi bi-chevron-left'></i>",
                            LinkToNextPageFormat = "<i class='bi bi-chevron-right'></i>",
                            LinkToLastPageFormat = "<i class='bi bi-chevron-double-right'></i>",
                            UlElementClasses = new[] { "pagination", "justify-content-center", "mt-4" },
                            LiElementClasses = new[] { "page-item" },
                            PageClasses = new[] { "page-link" },
                            DisplayLinkToFirstPage = PagedListDisplayMode.Always,
                            DisplayLinkToLastPage = PagedListDisplayMode.Always,
                            DisplayLinkToPreviousPage = PagedListDisplayMode.Always,
                            DisplayLinkToNextPage = PagedListDisplayMode.Always
                        })

        </div>
    </div>
</div>