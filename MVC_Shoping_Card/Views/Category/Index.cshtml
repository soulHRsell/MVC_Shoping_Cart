@model IPagedList<CategoryViewModel>

@{
    ViewData["title"] = "Categories";
}

<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="mb-4">@ViewData["title"]</h2>

            <form method="get" asp-action="Index" class="mb-3">
                <div class="row g-2 align-items-end">
                    <div class="col-md-8">
                        <label class="form-label fw-semibold">Search by Name</label>
                        <input type="text" name="name" value="@ViewBag.Name"
                               class="form-control" placeholder="Enter category name..." />
                    </div>

                    <div class="col-md-2 d-grid">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-search"></i> Search
                        </button>
                    </div>

                    <div class="col-md-2 d-grid">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-x-circle"></i> Reset
                        </a>
                    </div>
                </div>
            </form>

            <form asp-action="Create" method="get">
                <button type="submit" class="btn btn-outline-primary">Create Category</button>
            </form>
           

            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Name</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var category in Model)
                    {
                        <tr>
                            <td scope="row">@category.Name</td>
                            <td scope="row">

                                <form asp-action="Delete" asp-route-id="@category.Id" method="get" style="display:inline">
                                    <button type="submit" class="btn btn-outline-danger btn-sm me-1">Delete</button>
                                </form>

                                <form asp-action="Edit" asp-route-id="@category.Id" method="get" style="display:inline">
                                    <button type="submit" class="btn btn-outline-warning btn-sm">Edit</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            @Html.PagedListPager(
            Model,
            page => Url.Action("Index", new { page,  name = ViewBag.Name }),
                        new PagedListRenderOptions
                        {
                            LinkToFirstPageFormat = "<i class='bi bi-chevron-double-left'></i>",
                            LinkToPreviousPageFormat = "<i class='bi bi-chevron-left'></i>",
                            LinkToNextPageFormat = "<i class='bi bi-chevron-right'></i>",
                            LinkToLastPageFormat = "<i class='bi bi-chevron-double-right'></i>",
                            UlElementClasses = new[] { "pagination", "justify-content-center", "mt-4" },
                            LiElementClasses = new[] { "page-item" },
                            PageClasses = new[] { "page-link" },
                            DisplayLinkToFirstPage = PagedListDisplayMode.Always,
                            DisplayLinkToLastPage = PagedListDisplayMode.Always,
                            DisplayLinkToPreviousPage = PagedListDisplayMode.Always,
                            DisplayLinkToNextPage = PagedListDisplayMode.Always
                        })
            
        </div>
    </div>
</div>
